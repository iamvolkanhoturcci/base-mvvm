<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border" format="boolean" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="background_color" format="color" />
        <attr name="shadow" format="boolean" />
        <attr name="shadow_color" format="color" />
        <attr name="shadow_radius" format="float" />
        <attr name="shadow_gravity">
            <flag name="center" value="1" />
            <flag name="top" value="2" />
            <flag name="bottom" value="3" />
            <flag name="start" value="4" />
            <flag name="end" value="5" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="itemDividerWidth" format="dimension"/>
        <attr name="defaultIndicatorTheme" format="enum">
            <enum name="dark" value="0"/>
            <enum name="light" value="1" />
        </attr>
        <attr name="pagerIndicatorDrawable" format="reference" />
        <attr name="itemRadius" format="dimension"/>
        <attr name="itemSelectedColor" format="color" />
        <attr name="itemUnselectedColor" format="color" />
    </declare-styleable>
</resources>