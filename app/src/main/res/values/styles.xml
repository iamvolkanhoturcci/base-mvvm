<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeRed" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="FullScreenThemeRed" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="FullScreenThemeDark" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/dark_gray</item>
    </style>

    <style name="MainTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BottomSheet" />

    <style name="BottomSheet.Background" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_picker_dialog</item>
    </style>

    <style name="BottomSheet.Background.Red" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_sheet_dialog_red</item>
    </style>

    <style name="BottomSheet.Theme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet.Background</item>
    </style>

    <style name="BottomSheet.Theme.Red" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet.Background.Red</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:background">@drawable/input_layout_background</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

        <item name="android:paddingStart">@dimen/mediumMargin</item>
        <item name="android:paddingEnd">@dimen/mediumMargin</item>
        <item name="android:paddingBottom">@dimen/smallMargin</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/miniTextSize</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/miniTextSize</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/extraSmallTextSize</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
