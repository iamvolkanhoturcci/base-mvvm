<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheet" />

    <style name="BottomSheet.Background" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_picker_dialog</item>
    </style>

    <style name="BottomSheet.Theme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet.Background</item>
    </style>

</resources>
